{
  "browsersync" : {
    "open" : "external",
    "host" : "test.com",
    "proxy" : "test.com",
    "port" : "8080"
  },
  "production" : false,
  "paths" : {
    "css" : {
      "src" : [
        "bower_components/font-awesome/css/font-awesome.css",
        "assets/src/scss/**/*.scss"
      ],
      "dist" : "assets/dist/css/"
    },
    "js" : {
      "src" : [
        "bower_components/jquery/dist/jquery.js",
        "assets/src/js/**/*.js"
      ],
      "dist" : "assets/dist/js/"
    },
    "images" : {
      "src" : "assets/src/images/**/*",
      "dist" : "assets/dist/images/"
    },
    "fonts" : {
      "src" : [
        "assets/src/fonts/*",
        "bower_components/font-awesome/fonts/*"
      ],
      "dist" : "assets/dist/fonts/"
    },
    "php" : "",
    "watch" : {
      "css" : "assets/src/scss/**/*.scss",
      "js"  : "assets/src/js/**/*.js",
      "fonts"  : "assets/src/fonts/**/*.js",
      "images" : "assets/src/images/*",
      "php" : "**/*.php"
    }
  }
}